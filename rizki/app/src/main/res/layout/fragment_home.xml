<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <RelativeLayout
            android:id="@+id/atas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/foto"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


        </RelativeLayout>


            <TextView
                android:id="@+id/tanggal"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:text="Wednesday, 6 Nov 2019"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#e1ffb1"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:text="Selamat Pagi, Rizki!"
            android:layout_below="@+id/tanggal"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>
    <RelativeLayout
        android:id="@+id/tengah"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/bg_outlineradius"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/activeTask"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Active Task"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="12 Task"
            android:layout_below="@+id/activeTask"
            android:textStyle="bold"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true" />



        <TextView
            android:id="@+id/high"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="High Priority"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/atas"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="3 Task"
            android:layout_below="@+id/high"
            android:textStyle="bold"
            android:textColor="#d50000"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/pending"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pending Priority"
            android:textAlignment="center"
            android:layout_below="@+id/atas"
            android:layout_marginTop="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            tools:ignore="NotSibling" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="5 Task"
            android:layout_below="@+id/pending"
            android:textStyle="bold"
            android:textColor="#f44336"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_outlineradius"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tengah">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarSize="8dp"
            android:text="New Tasks"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/textView"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_red_flag_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.051" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Print Tugas Algoritma"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:text="Tue, 11 Nov"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.875"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic__flag_24"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Rapat Panitia Acara Seminar"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri, 15 Nov"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_orange_flag_24"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Kerjakan Tugas Kalkulus"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Wed, 12 Nov"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_circle_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tengah"/>
</RelativeLayout>

